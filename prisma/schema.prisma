generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum ProgramKey {
  INNOVATOR_CAMP
  INNOVATOR_PRO
  AI_ASSISTANTS
}

model Admin {
  id           String        @id @default(cuid())
  email        String        @unique
  name         String
  passwordHash String
  role         String        @default("admin")
  createdAt    DateTime      @default(now())
  updatedAt    DateTime      @updatedAt
  programEdits ProgramContent[] @relation("ProgramContentUpdatedBy")
  pageEdits    ProgramPageContent[] @relation("ProgramPageContentUpdatedBy")
}

model ProgramContent {
  id              String     @id @default(cuid())
  program         ProgramKey @unique
  titleId         String
  titleEn         String
  descriptionId   String
  descriptionEn   String
  ctaLabelId      String
  ctaLabelEn      String
  imageAltId      String
  imageAltEn      String
  createdAt       DateTime   @default(now())
  updatedAt       DateTime   @updatedAt
  updatedById     String?
  updatedBy       Admin?     @relation("ProgramContentUpdatedBy", fields: [updatedById], references: [id])
}

model ProgramPageContent {
  id          String     @id @default(cuid())
  program     ProgramKey @unique
  data        Json
  createdAt   DateTime   @default(now())
  updatedAt   DateTime   @updatedAt
  updatedById String?
  updatedBy   Admin?     @relation("ProgramPageContentUpdatedBy", fields: [updatedById], references: [id])
}
